# Database Configuration
DATABASE_URL=postgresql+asyncpg://warehouse_user:warehouse_pass@localhost:5432/warehouse_db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
DEBUG=False
APP_NAME=Warehouse Management System
VERSION=1.0.0

# CORS Settings
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# IP Whitelisting
ENABLE_IP_WHITELIST=false
WHITELISTED_IPS=127.0.0.1,::1,localhost

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Backup Settings
BACKUP_DIR=backups
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/warehouse.log

# 2FA Settings
ENABLE_2FA=false
TOTP_ISSUER=Warehouse Management System

# WebSocket Settings
ENABLE_WEBSOCKET=true

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,ar
